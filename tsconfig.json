{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react",
    "types": ["expo-router"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": true,
    "isolatedModules": true,
    "lib": ["dom", "esnext"],
    "skipLibCheck": true,
    "baseUrl": ".",
    "allowJs": true,
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "include": [
  "**/*.ts",
  "**/*.tsx",
  ".expo/types/**/*.ts",
  "expo-env.d.ts",
  "nativewind-env.d.ts"
]

}